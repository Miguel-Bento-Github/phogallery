{
  "name": "photography-portfolio",
  "version": "1.0.0",
  "description": "Real-time photography portfolio with Vue 3 frontend and Strapi v5 backend",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd photography-portfolio/backend && npm run develop",
    "dev:frontend": "cd photography-portfolio/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd photography-portfolio/backend && npm run build",
    "build:frontend": "cd photography-portfolio/frontend && npm run build",
    "test": "cd photography-portfolio/frontend && npm run test",
    "test:coverage": "cd photography-portfolio/frontend && npm run test:coverage"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "",
  "license": "MIT"
} 